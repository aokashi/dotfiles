// 既定の設定を上書きするには、このファイル内に設定を挿入します
{
  "editor.fontSize": 14,
  "editor.fontFamily": "Source Han Code JP, Menlo, Monaco, Cica, Consolas, Meiryo, monospace",
  "editor.tabSize": 2,
  "editor.renderWhitespace": "boundary",
  "editor.renderIndentGuides": true,
  "editor.wordWrap": "off",
  "editor.insertSpaces": true,
  "editor.minimap.renderCharacters": false,
  "markdown.preview.fontFamily": "'游ゴシック体', '游ゴシック', 'YuGothic', sans-serif",
  "files.associations": {
    "*.cgi": "perl"
  },
  "workbench.colorTheme": "Tomorrow Night Blue",
  "workbench.editor.tabCloseButton": "off",
  "git.autofetch": true,
  "window.zoomLevel": 0,
  "window.menuBarVisibility": "toggle",
  "terminal.integrated.fontSize": 15,
  "terminal.integrated.shell.windows": "cmd.exe",
  "terminal.integrated.env.windows": {
    "CMDER_ROOT": "C:\\tools\\Cmder" // Cmder のルートディレクトリ (インストール先が変わったら変更すること)
  },
  "terminal.integrated.shellArgs.windows": [
    "/k",
    "%CMDER_ROOT%\\vendor\\bin\\vscode_init.cmd"
  ],
  "javascript.referencesCodeLens.enabled": true,
  "typescript.implementationsCodeLens.enabled": true,
  "typescript.referencesCodeLens.enabled": true,
  "plantuml.exportFormat": "png",
  "diffEditor.ignoreTrimWhitespace": false,
}
